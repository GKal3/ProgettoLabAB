<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/Stile.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookrecommender.SuggController">
   <top>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="56.0" prefWidth="160.0" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="11.0" text="BookRecommender" textFill="SNOW">
               <font>
                  <Font name="Arial Rounded MT Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="enter" layoutX="510.0" layoutY="-2.0" mnemonicParsing="false" onAction="#apriAreaRiservata" prefHeight="56.0" prefWidth="90.0" styleClass="accessButton" text="My Account" textAlignment="CENTER" textFill="SNOW" wrapText="true" AnchorPane.rightAnchor="0.0">
               <font>
                  <Font name="Arial Nova Cond Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="home" layoutX="451.0" layoutY="-2.0" mnemonicParsing="false" onAction="#apriHomePage" prefHeight="56.0" prefWidth="60.0" styleClass="accessButton" text="Home" textAlignment="CENTER" textFill="SNOW" wrapText="true" AnchorPane.rightAnchor="90.0">
               <font>
                  <Font name="Arial Nova Cond Bold" size="15.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #fffafa;" BorderPane.alignment="TOP_CENTER">
         <children>
            <Region maxHeight="70.0" minHeight="-Infinity" prefHeight="35.0" VBox.vgrow="ALWAYS" />
            <Label alignment="BOTTOM_LEFT" minHeight="-Infinity" text="Add a suggestion for:">
               <font>
                  <Font name="Arial Nova Cond" size="27.0" />
               </font>
            </Label>
            <Label fx:id="titolo" prefHeight="60.0" text="Example">
               <font>
                  <Font name="Arial Nova Cond Italic" size="30.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Region prefWidth="111.0" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="cerca" minHeight="-Infinity" minWidth="-Infinity" onAction="#cercaTitolo" prefHeight="32.0" prefWidth="378.0" promptText="Search for books (max 3)" style="-fx-background-radius: 15;" />
                  <Button fx:id="sugg" mnemonicParsing="false" onAction="#addSugg" prefHeight="32.0" prefWidth="36.0" styleClass="plusSmallButton" />
                  <Region prefWidth="75.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <ListView fx:id="listaLibri" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="110.0" prefWidth="378.0" style="-fx-background-color: #fffafa;" VBox.vgrow="ALWAYS" />
            <Region prefHeight="15.0" />
            <Button fx:id="fine" alignment="CENTER" mnemonicParsing="false" onAction="#backLib" prefHeight="36.0" prefWidth="78.0" text="Done">
               <font>
                  <Font name="Arial Nova Cond" size="17.0" />
               </font>
            </Button>
            <Region prefHeight="20.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
</BorderPane>
